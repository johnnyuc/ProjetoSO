# Makefile de exemplo
# Considerar que PROG dever√° ser um nome 
# distinto para cada programa a compilar

CC = gcc
FLAGS = -Wall
PROG = program
OBJS = example.o

all: ${PROG}

clean:
	rm ${OBJS} *~ ${PROG}
 
${PROG}: ${OBJS}
	${CC} ${FLAGS} ${OBJS} -lm -o $@

.c.o:
	${CC} ${FLAGS} $< -c -o $@

##########################
example.o: example.h example.c